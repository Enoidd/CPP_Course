{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build C++ file",
      "type": "shell",
      "command": "g++",
      "args": [
        "-fdiagnostics-color=always",
        "-g",
        "${file}",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "Cross-platform build task",
      "linux": {
        "command": "/usr/bin/g++"
      },
      "windows": {
        "command": "C:\\TDM-GCC-64\\bin\\g++.exe"
      }
    }
  ]
}